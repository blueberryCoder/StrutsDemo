<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Sofware Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd"
        >
<struts>
    <constant name="struts.devMode" value="true"></constant>
    <package name="default" namespace="/customer" extends="struts-default">

        <action name="addCustomer" class="com.blueberry.actions.CustomerAction">
            <result name="success">
                /customer/addCustomer.jsp
            </result>
        </action>
        
        <action name="showCustomer" class="com.blueberry.actions.CustomerAction">
            <result name="success">
                /customer/showCustomer.jsp
            </result>

        </action>
    </package>
</struts>